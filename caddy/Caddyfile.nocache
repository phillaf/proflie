{
    # Disable automatic HTTPS for local development
    auto_https off
}

http://{$DOMAIN:localhost} {
    reverse_proxy web:3000
    
    # Nginx-style access logs
    log {
        output file /var/log/caddy/access.log {
            roll_size 100mb
            roll_keep 10
        }
        format json
    }
}
